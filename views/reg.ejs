    <div style="height: 100vh; align-items: center;" class="w-auto p-4 d-flex justify-content-center    ">
  


      <form style="width: 20rem" action="/check" method="POST">
  <!-- Email input -->
  <div class="form-outline">
    <div class="d-flex justify-content-center pb-3 mb-4">
      <h3 class="pb-2">Authorization</h3>
      
    </div>
      <% if (loginFound===false) { %>
             
              <p style="color: red; font-size: smaller;">  The passwords you entered did not match. Please double-check and try</p>
              <% }%>
    <input type="email" name="newemail" id="form2Example1" class="form-control pb-3 mb-4" required placeholder="Email address">
   
  </div>

  <!-- Password input -->
  <div class="form-outline">
    <input type="password" name="newpassword" id="form2Example2" class="form-control pb-3 mb-4" required placeholder="New password?">
  
  </div>

  <!-- Confirm Password input -->
  <div class="form-outline">
    <input type="password" name="newpascheck" id="form2Example3" class="form-control pb-3 mb-4" required placeholder="Confirm Your Password">

  </div>

  <!-- Submit button -->
  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-primary col-md btn-block mb-4">Register</button>
  </div>

  <!-- Register buttons -->
  <div class="text-center">
    <p>Already have an account? <a href="/">Login</a></p>
  </div>
</form>

