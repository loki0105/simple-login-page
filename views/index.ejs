    <div class="container "> 
    <div style="height: 100vh; align-items: center;" class="w-auto p-4 d-flex justify-content-center   ">
      <form style="width: 20rem  " action="/submit" method="POST">
        <!-- Email input -->
        <div data-mdb-input-init="" class="form-outline " data-mdb-input-initialized="true">
             <div class="d-flex justify-content-center mr">
            <h3 class="pb-3">login</h3></div>
            <% if (loginFound===false) { %>
             
              <p style="color: red; font-size: smaller;">  The email and password you entered did not match our records. Please double-check and try</p>
              <% }%>
               
    
   
          <input type="email" name="email" id="form2Example1" class="form-control pb-3 mb-4" placeholder="Email address">
         
        <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 88.8px;"></div><div class="form-notch-trailing"></div></div></div>

        <!-- Password input -->
        <div data-mdb-input-init="" class="form-outline " data-mdb-input-initialized="true">
          
          <input type="password" name="password" id="form2Example2" class="form-control pb-3 mb-4" placeholder="Password">
        <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 64px;"></div><div class="form-notch-trailing"></div></div></div>




        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4 mr ">
          <div class="col d-flex justify-content-center ">
            <!-- Checkbox -->
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked="">
              <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
          </div>

          <div class="col">
            <!-- Simple link -->
            <a href="#xx!">Forgot password?</a>
          </div>
        </div>

        <!-- Submit button -->
       <div class="d-flex justify-content-center">
  <button   class="btn btn-primary col-md btn-block mb-4"> Sign in</button>
</div>
        <!-- Register buttons -->
        <div class="text-center">
        <p>Not a member? <a href="/register">Register</a></p>
          
        </div>
      </form>
    </div>

</div>



